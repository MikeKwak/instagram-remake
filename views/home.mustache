<!DOCTYPE html>
<html lang="en">
  <head>
    {{> meta}}
  </head>
  <body>
    {{> header}}
    <div class="wrap">
      <div class="container is-fluid">
        <div class="columns flex-wrap">
          {{#blogs}}
          <div class="column flex-column-fix-size">
            <div class="card fill-height">
              <header class="card-header">
                <p class="card-header-title">{{ name }}</p>
              </header>
              <div class="content" style="padding: 15px">{{ message }}</div>
              <footer class="card-footer">
                <div class="card-footer">
                  <a href="#" class="card-footer-item">{{ subject }}</a>
                </div>
                <div class="card-footer">
                  <a href="#" class="card-footer-item">{{ name }}</a>
                </div>
              </footer>
            </div>
          </div>
          {{/blogs}}
        </div>
      </div>
    </div>
    <hr />

    {{> footer}}
  </body>
</html>
