<!DOCTYPE html>
<html lang="en">
  <head>
    {{> meta}}
  </head>
  <body>
    {{> header}}
    <div class="box wrap">
      <form action="/form" method="post" enctype="multipart/form-data">
        <div class="field">
          <label class="label">Image</label>
          <div class="control">
            <input 
              type="file" 
              name="image" 
              class="input" 
              accept="image/*" />
          </div>
        </div>

        <div class="field">
          <label class="label">Post Title</label>
          <div class="control">
            <input
              id="titleInput"
              name="title"
              class="input"
              type="text"
              placeholder="title of the post" />
          </div>
        </div>

        <div class="field">
          <label class="label">Subject</label>
          <div class="control">
            <div class="select">
              <select id="subjectInput" name="subject">
                <option>Self Development</option>
                <option>Technology</option>
                <option>Programming</option>
                <option>Business</option>
                <option>Philosophy</option>
              </select>
            </div>
          </div>
        </div>

        <div class="field">
          <label class="label">Text</label>
          <div class="control">
            <textarea
              id="textInput"
              name="text"
              class="textarea"
              placeholder="Give your input to the world"></textarea>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button type="submit" class="button is-link">Submit</button>
          </div>
          <div class="control">
            <button type="reset" button is-link is-light">Cancel</button>
          </div>
        </div>
      </form>
    </div>
    S
    <hr />

    {{> footer}}
  </body>
</html>
