<!DOCTYPE html>
<html lang="en">
  <head>
    {{> meta}}
  </head>
  <body>
    {{> header}}
    <div class="box">
      <form action="/form" method="post">
        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <input
              id="nameInput"
              name="name"
              class="input"
              type="text"
              placeholder="Text input" />
          </div>
        </div>

        <div class="field">
          <label class="label">Subject</label>
          <div class="control">
            <div class="select">
              <select id="subjectInput" name="subject">
                <option>Select dropdown</option>
                <option>Science</option>
                <option>Self Development</option>
                <option>World</option>
                <option>Programming</option>
              </select>
            </div>
          </div>
        </div>

        <div class="field">
          <label class="label">Message</label>
          <div class="control">
            <textarea
              id="messageInput"
              name="message"
              class="textarea"
              placeholder="Textarea"></textarea>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button type="submit" class="button is-link">Submit</button>
          </div>
          <div class="control">
            <button type="reset" button is-link is-light">Cancel</button>
          </div>
        </div>
      </form>
    </div>
    S
    <hr />

    {{> footer}}
  </body>
</html>
